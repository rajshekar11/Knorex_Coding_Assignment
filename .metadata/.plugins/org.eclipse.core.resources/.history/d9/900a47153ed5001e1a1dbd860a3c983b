package com.knorex;

import java.util.Scanner;

import com.knorex.model.ParkingLot;
import com.knorex.model.VehicleToken;
import com.knorex.model.VehicleType;

public class Main {

	public static void main(String[] args) {
		ParkingLot parkingLot=new ParkingLot(3,3);
		while(true) {
			Scanner sc=new Scanner(System.in);
			System.out.println("Please choose following: ");
			System.out.println("1: Add vehicle ");
			System.out.println("2: Remove Vehicle ");
			System.out.println("3: check availability");
			System.out.println("4: Exit");
			int n=sc.nextInt();
			if(n==1) {
				
				parkingLot.addVehicle("Ka3335", "white", VehicleType.BIKE);
				parkingLot.addVehicle("Ka3534", "teal", VehicleType.CAR);
				parkingLot.addVehicle("Ka3533", "green", VehicleType.BUS);
			}
			else if(n==2) {
				System.out.println("Enter registration Number");
				String registrationNumber=sc.next();
				parkingLot.removeVehicle(registrationNumber);
			}
			else if(n==3) {
				parkingLot.checkAvailability(2, VehicleType.BIKE);
			}
			else if(n==4) {
				break;
			}
			else {
				System.out.println("Please enter correct options");
				continue;
			}
		}
		
		
	}
}
